<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/selector_screen_background">
		<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp">
			<com.example.famreen.application.custom.AppEditText
				android:id="@+id/et_change_password_email"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:hint="Email"
				android:paddingStart="8dp"
				android:paddingEnd="8dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="5dp"
				android:background="@drawable/selector_et_border">
			</com.example.famreen.application.custom.AppEditText>
			<com.example.famreen.application.custom.AppEditText
				android:id="@+id/et_change_password_old_password"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:hint="Password"
				android:paddingStart="8dp"
				android:paddingEnd="8dp"
				android:layout_marginBottom="5dp"
				android:background="@drawable/selector_et_border">
			</com.example.famreen.application.custom.AppEditText>
			<com.example.famreen.application.custom.AppEditText
				android:id="@+id/et_change_password_new_password"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:hint="New Password"
				android:paddingStart="8dp"
				android:paddingEnd="8dp"
				android:layout_marginBottom="5dp"
				android:background="@drawable/selector_et_border">
			</com.example.famreen.application.custom.AppEditText>
			<androidx.appcompat.widget.LinearLayoutCompat
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center"
				android:layout_marginTop="7dp">
				<com.example.famreen.application.custom.AppButton
					android:id="@+id/bt_change_password_change"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="CHANGE"
					android:background="@drawable/selector_et_border"
					android:elevation="5dp"
					android:layout_marginEnd="10dp"
					android:layout_weight="1">
				</com.example.famreen.application.custom.AppButton>
			</androidx.appcompat.widget.LinearLayoutCompat>
		</androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>