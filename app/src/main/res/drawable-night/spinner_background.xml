<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/colorItemBackground"/>
			<corners android:radius="10dp" />
		</shape>
	</item>
	<item android:gravity="center_vertical|right" android:right="10dp">
		<layer-list>
			<item android:width="9dp" android:height="9dp"  android:gravity="center" android:bottom="4dp">
				<rotate
					android:fromDegrees="45"
					android:toDegrees="45">
					<shape android:shape="rectangle">
						<solid android:color="@color/colorItemBackground" />
						<stroke android:color="@color/colorText" android:width="1dp"/>
					</shape>
				</rotate>
			</item>
			<item android:width="23dp" android:height="17dp" android:bottom="21dp" >
				<shape android:shape="rectangle">
					<solid android:color="@color/colorItemBackground"/>
				</shape>
			</item>
		</layer-list>
	</item>
</layer-list>