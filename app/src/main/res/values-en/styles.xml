<resources>
    <style name="MainTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorText</item>
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:navigationBarColor">@color/colorNavBar</item>
        <item name="android:statusBarColor">@color/colorNavBar</item>
    </style>
    <style name="ToolBar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorToolBar</item>
        <item name="android:elevation">3dp</item>
    </style>
    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">8pt</item>
    </style>
    <style name="LoadingView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
    </style>
</resources>
